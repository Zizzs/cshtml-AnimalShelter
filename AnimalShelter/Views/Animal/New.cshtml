@{
  Layout = "_Layout";
}

<div class="container">
   <p>Animal Database</p>
   <form action = "/animals/show" method="post">
        <label for='animalName'>Animal Name</label>
        <input id='animalName' name='animalName' type='text' required><br>
        <label for='animalType'>Animal Type</label>
        <input id='animalType' name='animalType' type='text' required><br>
        <label for='animalSex'>Animal Sex</label>
        <input id='animalSex' name='animalSex' type='text' required><br>
        <label for='animalDate'>Animal Admission Date</label>
        <input id='animalDate' name='animalDate' type='date' required><br>
        <label for='animalAge'>Animal Age</label>
        <input id='animalAge' name='animalAge' type='number' required><br>
         <button type='submit'>Add Animal To Database</button>
   </form>

   <a href="/animals/show">Click here for list of animals.</a>
</div>
